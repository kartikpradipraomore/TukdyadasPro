<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>साहित्य</title>
    <link rel="stylesheet" href="/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Hind:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content: List of Books -->
    <main>
      <div class="heading_container">
        <h1 class="">साहित्य</h1>
      </div>

      <div class="search_container">
        <form action="/search" method="GET" class="search_container_form">
          <input
            type="text"
            name="query"
            placeholder="Search..."
            class="search_bar"
          />
          <button type="submit" class="search_button">
            <i class="fa fa-search"></i>
          </button>
        </form>
      </div>

      <table class="styled-table">
        <thead>
          <tr>
            <th>क्रमांक</th>
            <th>Title</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach(function(book, index) { %>
          <tr>
            <td><%= (page - 1) * 10 + index + 1 %></td>
            <!-- Adjusted index for pagination -->
            <td><a href="/sahitya/<%= book.id %>"><%= book.title %></a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <!-- Pagination Controls -->
      <div class="pagination">
        <% if (page > 1) { %>
        <a href="/sahitya?page=<%= page - 1 %>">Previous</a>
        <% } %>

        <span>Page <%= page %> of <%= totalPages %></span>

        <% if (page < totalPages) { %>
        <a href="/sahitya?page=<%= page + 1 %>">Next</a>
        <% } %>
      </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>
  </body>
</html>
