    <title>संपर्क</title>
    <link rel="stylesheet" href="/styles.css" />
    <style>
        /* Main container with background */
         #sampark_main {
            /* background-image: url("/images/sampark2.png"); */
            background-size: cover;
            background-position: center; 
            padding: 20px;
            box-sizing: border-box;
        }

        /* Styling the purpose section */
        .purpose-section {
            width: 70%;
            margin: 0 auto;
            padding: 20px;
            background-color: F4E4C1;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .purpose-section h3 {
            font-size: 28px;
            margin: 0;
            text-align: center;
        }

        .purpose-section p {
            font-size: 1.1rem;
            line-height: 1.6;
            text-align: justify;
        }

        /* Table Styling */
        .styled-table3 {
            width: 70%;
            margin: 30px auto;
            border-collapse: collapse;
            font-size: 18px;
            text-align: left;
            background-color: F4E4C1;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
        }

        .styled-table3 th,
        .styled-table3 td {
            padding: 10px 15px;
            text-align: left;
            color: black;
        }

        .styled-table3 td {
            font-size: 18px;
            text-align: center;
        }

        /* Contact Information Styling */
        .contact-info {
            width: 70%;
            margin: 20px auto;
            padding: 20px;
            background-color: F4E4C1;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 10px;
            text-align: center;
        }

        .contact-info h2 {
            font-size: 26px;
            margin-bottom: 10px;
        }

        .contact-info p {
            font-size: 18px;
            margin: 5px 0;
        }

         /* Media Queries for Responsive Design */
        @media (max-width: 768px) {
            .purpose-section {
                width: 90%;
            }

            .styled-table3 {
                width: 90%;
                font-size: 16px;
            }

            .contact-info {
                width: 90%;
            }

            .purpose-section h3 {
                font-size: 22px;
            }

            .purpose-section p {
                font-size: 1rem;
            }

            .styled-table3 td {
                font-size: 16px;
            }

            .contact-info h2 {
                font-size: 22px;
            }

            .contact-info p {
                font-size: 16px;
            }
        }

        @media (max-width: 480px) {
            .purpose-section {
                width: 95%;
            }

            .styled-table3 {
                width: 95%;
            }

            .contact-info {
                width: 95%;
            }

            .purpose-section h3 {
                font-size: 20px;
            }

            .purpose-section p {
                font-size: 0.9rem;
            }

            .styled-table3 td {
                font-size: 14px;
            }

            .contact-info h2 {
                font-size: 20px;
            }

            .contact-info p {
                font-size: 14px;
            }
             #sampark_main {
            /* background-image: url("/images/sampark2.png");
