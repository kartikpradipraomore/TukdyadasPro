<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>साहित्य विषय</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <!-- Header -->
    <%- include('partials/header') %>

    <!-- Main Content Section: Loop through all topics -->
    <main>
      <div class="topics-list">
        <% topics.forEach(function(topic) { %>
        <div class="topic-section">
          <h3><%= topic.title %></h3>
          
          <!-- Topic title -->
          <div id="topic-article-container">
            <p><%- topic.article %></p>
            <!-- Render the topic content as unescaped HTML -->
          </div>
        </div>
        <hr />
        <% }); %>
      </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>
  </body>
</html>
